{
  "name": "mobile",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo export --platform ios --platform android --platform web",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@expo/metro-runtime": "catalog:",
    "@expo/vector-icons": "catalog:",
    "@orpc/client": "catalog:",
    "@orpc/tanstack-query": "catalog:",
    "@react-navigation/native": "catalog:",
    "api": "workspace:*",
    "@infrastructure/api-client": "workspace:*",
    "@infrastructure/navigation": "workspace:*",
    "@infrastructure/ui": "workspace:*",
    "@infrastructure/utils": "workspace:*",
    "@tanstack/react-query": "catalog:",
    "class-variance-authority": "catalog:",
    "expo": "catalog:",
    "expo-constants": "catalog:",
    "expo-font": "catalog:",
    "expo-linking": "catalog:",
    "expo-router": "catalog:",
    "expo-status-bar": "catalog:",
    "uniwind": "catalog:",
    "react": "catalog:",
    "react-native": "catalog:",
    "react-native-gesture-handler": "catalog:",
    "react-native-reanimated": "catalog:",
    "react-native-safe-area-context": "catalog:",
    "react-native-screens": "catalog:",
    "react-dom": "catalog:",
    "react-native-web": "catalog:",
    "react-native-worklets": "catalog:"
  },
  "devDependencies": {
    "@babel/core": "catalog:",
    "@babel/runtime": "catalog:",
    "@infrastructure/typescript-config": "workspace:*",
    "@types/jest": "catalog:",
    "@types/react": "catalog:",
    "@testing-library/react-native": "catalog:",
    "jest": "catalog:",
    "jest-expo": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "./jest-setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!\\.pnpm|((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@infrastructure/.*|@tanstack/.*)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
